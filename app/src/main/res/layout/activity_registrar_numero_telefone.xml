<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/verificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verifique o numero de telefone"
        android:textSize="20sp"
        android:textColor="@color/teal"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensagens enviara uma mensagem para verificar eu numero. Entre com o pais e numero de telefone:"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/verificar"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:id="@+id/pais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/text"
        android:layout_marginTop="55dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/pais"
        android:layout_marginTop="55dp">

        <TextView
            android:id="@+id/codigoPais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+00"
            android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/telefone"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:hint="phone number"
            android:inputType="phone"
            android:layout_weight="1"
            app:backgroundTint="@color/teal"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:textColor="@android:color/white"
        android:background="@color/teal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:onClick="nextButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taxas de Operadores poderao Ser Aplicadas"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>
